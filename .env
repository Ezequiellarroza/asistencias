# .env
# Variables de entorno para el frontend React

# URL base de la API
VITE_API_BASE_URL=https://ezequiellarroza.com.ar/api

# Timeout para peticiones a la API (en milisegundos)
VITE_API_TIMEOUT=30000

# Nombre de la aplicación
VITE_APP_NAME=Sistema de Presentismo

# Versión de la aplicación
VITE_APP_VERSION=1.0.0

# Modo de desarrollo (development, production)
VITE_MODE=production

# Habilitar logs en consola
VITE_ENABLE_CONSOLE_LOGS=false

# Radio de geolocalización por defecto (metros)
VITE_DEFAULT_GPS_RADIUS=100

# Timeout para geolocalización (milisegundos)
VITE_GPS_TIMEOUT=10000

# PWA - Service Worker
VITE_ENABLE_PWA=true

# Offline mode
VITE_ENABLE_OFFLINE=true